<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Classes.CadastroVendaPage">
    <ScrollView>
        <StackLayout Spacing="20" 
                     Padding="20">
            <Label Text="Cadastro de Venda" 
                   FontSize="Title" />
            <Entry Placeholder="Valor da Venda" 
                   x:Name="ValorVendaEntry" />
            <Entry Placeholder="Quantidade" 
                   x:Name="QuantidadeEntry" />
            <Entry Placeholder="ID do Produto" 
                   x:Name="IdProdutoEntry" />
            <Entry Placeholder="Cliente" 
                   x:Name="ClienteEntry" />
            <Entry Placeholder="ID do Cliente" 
                   x:Name="IdClienteEntry" />
            <DatePicker DateSelected="DatePickerDateSelected" 
                        x:Name="DataVendaPicker" />
            <Button Text="Salvar" 
                    Clicked="SalvarClicked" />
            <Button Text="Cancelar" 
                    Clicked="CancelarClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
