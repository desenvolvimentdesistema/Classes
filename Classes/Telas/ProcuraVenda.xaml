<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Classes.ProcuraVenda">
    <ScrollView>
        <StackLayout Spacing="20" 
                     Padding="20">
            <Label Text="ProcurarVenda" 
                   FontSize="Title" />
            <Entry Placeholder="IDdoProduto" 
                   x:Name="IdProduto" />
            <Entry Placeholder="Cliente" 
                   x:Name="Cliente" />
            <Entry Placeholder="IDCliente" 
                   x:Name="IdCliente" />
            <DatePicker DateSelected="DatePickerDateSelected" 
                        x:Name="DataVendaPicker" />
            <Button Text="Procurar" 
                    Clicked="ProcurarClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>