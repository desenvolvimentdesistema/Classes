<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Classes.Vendas">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Vendas"
               FontSize="16"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />

        <Button Text="ConsultarVendas"
                Grid.Row="1"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="ConsultarVendasClicked" />

        <Button Text="ProcessarVendas"
                Grid.Row="2"
                VerticalOptions="Center"
                HorizontalOptions="Center" 
                Clicked="ProcessarVendasClicked" />

        <Button Text="ProcurarVendas"
                Grid.Row="3"
                 VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="ProcurarVendasClicked" />
    </Grid>
</ContentPage>
